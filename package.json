{
  "name": "recaptcha-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:local": "RECAPTCHA_SECRET=test_secret PORT=8080 node server.js",
    "test:health": "curl -s https://alliance-backend-production.up.railway.app/health | jq",
    "test:verify": "curl -s -X POST https://alliance-backend-production.up.railway.app/verify-token -H \"Content-Type: application/json\" -d '{\"token\":\"TEST\"}' | jq",
    "test:google": "curl -s -X POST 'https://www.google.com/recaptcha/api/siteverify' -d 'secret=YOUR_SECRET&response=TEST' | jq",
    "logs": "railway logs --timestamps"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jq": "^1.7" 
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
